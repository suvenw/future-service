<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suven.framework.sys.mapper.SysDepartMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.suven.framework.sys.entity.SysDepart" id="sysDepartMap">
        <result property="id" column="id"/>
        <result property="createDate" column="create_date"/>
        <result property="modifyDate" column="modify_date"/>
        <result property="status" column="status"/>
        <result property="sort" column="sort"/>
        <result property="parentId" column="parent_id"/>
        <result property="departName" column="depart_name"/>
        <result property="departNameEn" column="depart_name_en"/>
        <result property="departNameAbbr" column="depart_name_abbr"/>
        <result property="description" column="description"/>
        <result property="orgType" column="org_type"/>
        <result property="orgCode" column="org_code"/>
        <result property="mobile" column="mobile"/>
        <result property="fax" column="fax"/>
        <result property="address" column="address"/>
        <result property="remarks" column="remarks"/>
    </resultMap>

    <select id="queryUserDepartsByUserId" parameterType="long" resultType="com.suven.framework.sys.entity.SysDepart">
	   select * from sys_depart where id IN ( select dep_id from sys_user_depart where user_id = #{userId} )
	</select>

    <select id="queryUserDepartsByIds"  resultType="com.suven.framework.sys.entity.SysDepart">
        select * from sys_depart where id IN
        <foreach collection="departIds" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>