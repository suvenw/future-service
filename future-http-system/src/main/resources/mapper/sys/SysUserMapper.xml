<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.suven.framework.sys.mapper.SysUserMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.suven.framework.sys.entity.SysUser" id="sysUserMap">
        <result property="id" column="id"/>
        <result property="status" column="status"/>
        <result property="createDate" column="create_date"/>
        <result property="modifyDate" column="modify_date"/>
        <result property="nickName" column="nick_name"/>
        <result property="userCode" column="user_code"/>
        <result property="password" column="password"/>
        <result property="userHeadImg" column="user_head_img"/>
        <result property="weChatName" column="we_chat_name"/>
        <result property="weChatImg" column="we_chat_img"/>
        <result property="sex" column="sex"/>
        <result property="phone" column="phone"/>
        <result property="birthdayType" column="birthday_type"/>
        <result property="birthday" column="birthday"/>
        <result property="storeId" column="store_id"/>
        <result property="followUserId" column="follow_user_id"/>
        <result property="qrCode" column="qr_code"/>
        <result property="remarks" column="remarks"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, create_date, modify_date, status, nick_name, phone, password,birthday_type, store_id, follow_user_id,
    sex, birthday, remarks, qr_code, user_code, user_head_img, we_chat_name, we_chat_img
    </sql>

    <!-- 根据用户名查询 -->
    <select id="getUserByName" resultType="com.suven.framework.sys.entity.SysUser">
        select * from  user_info  where username = #{username}
    </select>

    <!-- 根据部门Id查询 -->
    <select id="getUserByDepId" resultType="com.suven.framework.sys.entity.SysUser">
        select * from user_info where  id in (select user_id from sys_user_depart where dep_id=#{departId})
        <if test="username!=null and username!=''">
            and username = #{username}
        </if>
    </select>


    <!-- 根据部门Id查询 -->
    <select id="getUserByUserIds" resultType="com.suven.framework.sys.entity.SysUser">
        select * from user_info where  id in
        <foreach collection="userIds" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        <if test="username!=null and username!=''">
            and phone = #{username}
        </if>
    </select>

    <!-- 根据角色Id查询  select * from sys_user where del_flag = '0' and id in (select user_id from sys_user_role where role_id=#{roleId}) -->
    <select id="getUserByRoleId" resultType="com.suven.framework.sys.entity.SysUser">
        select * from user_info where id in (select user_id from sys_user_role where role_id=#{roleId})
        <if test="username!=null and username!=''">
            and username = #{username}
        </if>
    </select>

    <!--  修改用户部门code -->
    <update id="updateUserDepart">
        UPDATE user_info SET org_code = #{orgCode} where username = #{username}
    </update>

    <!-- 根据手机号查询 -->
    <select id="getUserByPhone"  resultType="com.suven.framework.sys.entity.SysUser">
        select * from  user_info  where phone = #{phone}
    </select>

    <!-- 根据邮箱查询用户信息 -->
    <select id="getUserByEmail" resultType="com.suven.framework.sys.entity.SysUser">
        select * from  user_info  where email = #{email}
    </select>

    <!-- 根据条件 分页 查询用户 列表    -->
    <select id="getPageList" resultType="com.suven.framework.sys.dto.response.SysUserResponseDto">
        select
        <include refid="Base_Column_List" />
        from user_info where 1 = 1
        <if test="userReqDto.nickname !=null ">
            and nickname LIKE concat('%',#{userReqDto.nickname},'%')
        </if>
        <if test="userReqDto.id > 0">
            and id = #{userReqDto.id}
        </if>
        <if test="userReqDto.phone != null ">
            and phone = #{userReqDto.phone}
        </if>
        <if test="userReqDto.sex > 0">
            and sex = #{userReqDto.sex}
        </if>
        <if test="userReqDto.status > 0">
            and status = #{userReqDto.status}
        </if>
        <if test="userReqDto.startDate != null ">
            and create_date >= #{userReqDto.startDate}
        </if>
        <if test="userReqDto.endDate != null ">
            and create_date &lt;= #{userReqDto.endDate}
        </if>
    </select>
</mapper>